<base:AB_SplashWindow x:Class="WPF.Wizards.OrderWizard.OrderWizardSplash"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:base="clr-namespace:A4DN.Core.WPF.Base;assembly=A4DN.Core.WPF.Base"
                      xmlns:systemSharedProperties="clr-namespace:BOS.OrderManagement.Shared.Properties;assembly=BOS.OrderManagement.Shared"
                      x:Name="SplashWindow"
                      Title="{Binding Path=ap_SystemName, ElementName=SplashWindow}">
    <base:AB_SplashWindow.ap_CompanyLogo>
        <Image Source="/WPF.OrderManagement.Shared;component/images/EasyBuyDistributors48x200.png" />
    </base:AB_SplashWindow.ap_CompanyLogo>
    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Image Height="100"
                   Width="100"
                   Source="/WPF.OrderManagement.Shared;component/images/EasyBuyv4Logo_256_256_32.png" />
            <TextBlock Text="{x:Static systemSharedProperties:DescriptionResource.ORDERWIZARD}"
                       Margin="5 0 0 0"
                       FontSize="36"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</base:AB_SplashWindow>